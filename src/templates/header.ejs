  bg = true
}

if (typeof url === 'undefined') {
  url = ''
}

const menuList = [
  {
    title: 'Главная',
    url: 'am-main.html',
    viewOnHeader: true
  },
  {
    title: 'Займы',
    url: 'am-calc.html',
    viewOnHeader: true,
    subList: [
      {
        title: 'Под залог недвижимости',
        url: 'am-property.html'
      },
      {
        title: 'Под залог ПТС',
        url: 'am-zalog-pts.html'
      },
      {
        title: 'Под залог автомобиля',
        url: 'am-zalog-auto.html'
      },
      {
        title: 'Автоломбард',
        url: 'am-avtolombard.html'
      },
      {
        title: 'Под залог спецтехники',
        url: 'am-special-tech.html'
      },
      {
        title: 'С плохой кредитной историей',
        url: 'am-bad-history.html'
      }
    ]
  },
  {
    title: 'О компании',
    url: '#',
    viewOnHeader: true,
    subList: [
      {
        title: 'Лицензии',
        url: 'am-licenses.html'
      },
      {
        title: 'Новости',
        url: '#'
      },
      {
        title: 'Документы',
        url: 'am-licenses.html'
      },
      {
        title: 'Выданные займы',
        url: 'am-loans-list.html'
      },
      {
        title: 'Отзывы',
        url: 'am-reviews.html'
      }
    ]
  },
  {
    title: 'Вопросы и ответы',
    url: 'am-faq.html',
    viewOnHeader: true
  },
  {
    title: 'Статьи',
    url: '#',
    viewOnHeader: false,
    subList: [
      {
        title: 'Перечень документов для оформления займа',
        url: 'am-article.html'
      }
